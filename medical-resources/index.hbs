        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script type="text/javascript" src="./COUNTY_MOI_1060525.json"></script>
        <script type="text/javascript" src="./pratice.js"></script>
        <script type="text/javascript" src="./Hospital.js"></script>
        <script type="text/javascript" src="./map_position.js"></script>
    </div>
    {{> end}}
